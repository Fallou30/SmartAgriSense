# smartagrisense/api/.env
PORT=3000
NODE_ENV=development

# MongoDB
MONGO_URI=mongodb://mongodb:27017/smartagrisense
MONGO_HOST=mongodb
MONGO_PORT=27017
MONGO_USER=admin
MONGO_PASSWORD=password

# API Keys
OPENWEATHER_API_KEY=${OPENWEATHER_API_KEY}
TWILIO_ACCOUNT_SID=${TWILIO_ACCOUNT_SID}
TWILIO_AUTH_TOKEN=${TWILIO_AUTH_TOKEN}
TWILIO_PHONE_NUMBER=${TWILIO_PHONE_NUMBER}

# JWT
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRE=7d

# CORS
CORS_ORIGIN=http://localhost:3001

# Weather
WEATHER_CACHE_DURATION=1800
WEATHER_REFRESH_INTERVAL=600

# SMS
SMS_ALERT_ENABLED=true
SMS_ALERT_CRITICAL=true
SMS_ALERT_WARNING=false
FARMER_PHONES=+221771234567,+221779876543,+221763456789

# Logging
LOG_LEVEL=info
LOG_FILE=logs/api.log